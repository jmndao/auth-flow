{
  "name": "@jmndao/auth-flow",
  "version": "3.0.0",
  "description": "Universal authentication client with automatic token refresh and framework integrations",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dev": "rollup -c -w",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts",
    "format": "prettier --write **/*.{ts,js,json,md}",
    "format:check": "prettier --check **/*.{ts,js,json,md}",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist coverage",
    "verify:build": "node scripts/verify-build.js",
    "changelog": "node scripts/changelog.js",
    "version": "node scripts/version.js && git add .",
    "prepublishOnly": "npm run clean && npm run type-check && npm run lint:check && npm run test && npm run build && npm run verify:build",
    "release:patch": "npm run changelog && git add CHANGELOG.md && git commit -m \"docs: update CHANGELOG\" && npm version patch && npm publish && git push --follow-tags",
    "release:minor": "npm run changelog && git add CHANGELOG.md && git commit -m \"docs: update CHANGELOG\" && npm version minor && npm publish && git push --follow-tags",
    "release:major": "npm run changelog && git add CHANGELOG.md && git commit -m \"docs: update CHANGELOG\" && npm version major && npm publish && git push --follow-tags",
    "release:beta": "npm run changelog && git add CHANGELOG.md && git commit -m \"docs: update CHANGELOG\" && npm version prerelease --preid=beta && npm publish --tag beta && git push --follow-tags"
  },
  "keywords": [
    "authentication",
    "auth",
    "jwt",
    "token",
    "refresh",
    "nextjs",
    "react",
    "vue",
    "typescript",
    "universal",
    "client",
    "server"
  ],
  "author": {
    "name": "jmndao",
    "email": "jmndao@example.com",
    "url": "https://github.com/jmndao"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmndao/auth-flow.git"
  },
  "bugs": {
    "url": "https://github.com/jmndao/auth-flow/issues"
  },
  "homepage": "https://github.com/jmndao/auth-flow#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "vue": ">=3.0.0",
    "next": ">=12.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./frameworks/react": {
      "import": "./dist/frameworks/react/hooks.esm.js",
      "require": "./dist/frameworks/react/hooks.js",
      "types": "./dist/frameworks/react/hooks.d.ts"
    },
    "./frameworks/vue": {
      "import": "./dist/frameworks/vue/composables.esm.js",
      "require": "./dist/frameworks/vue/composables.js",
      "types": "./dist/frameworks/vue/composables.d.ts"
    },
    "./frameworks/nextjs": {
      "import": "./dist/frameworks/nextjs/index.esm.js",
      "require": "./dist/frameworks/nextjs/index.js",
      "types": "./dist/frameworks/nextjs/index.d.ts"
    },
    "./frameworks/vanilla": {
      "import": "./dist/frameworks/vanilla/setup.esm.js",
      "require": "./dist/frameworks/vanilla/setup.js",
      "types": "./dist/frameworks/vanilla/setup.d.ts"
    },
    "./diagnostics": {
      "import": "./dist/diagnostics/index.esm.js",
      "require": "./dist/diagnostics/index.js",
      "types": "./dist/diagnostics/index.d.ts"
    },
    "./presets": {
      "import": "./dist/presets.esm.js",
      "require": "./dist/presets.js",
      "types": "./dist/presets.d.ts"
    },
    "./middleware": {
      "import": "./dist/middleware/index.esm.js",
      "require": "./dist/middleware/index.js",
      "types": "./dist/middleware/index.d.ts"
    }
  }
}